<Window x:Class="PROJECT_KINO.Windows.Users_marks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROJECT_KINO.Windows"
        mc:Ignorable="d"
        Title="Users_marks" Height="450" Width="800">
    <Grid Background="#FF700897">
        <Label Content="Оценки пользователей фильма" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Width="321"/>
        <DataGrid Name="Marks_grid" HorizontalAlignment="Left" Height="367" Margin="10,42,0,0" VerticalAlignment="Top" Width="772" FontSize="20" AutoGenerateColumns="False" FontWeight="Bold">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding Login}" Width="300"/>
                <DataGridTextColumn Header="Оценка" Binding="{Binding Mark}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="Film_lbl" Content="" HorizontalAlignment="Left" Margin="331,5,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Width="451"/>

    </Grid>
</Window>
